@model PricingIndexVM
@{
    ViewData["Title"] = "Index";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a href="index.html">Home</a></li>
                <li>Pricing</li>
            </ol>
            <h2>Pricing</h2>
                
        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Pricing Section ======= -->
    <section id="pricing" class="pricing">
        <div class="container">
                    
            <div class="row no-gutters">

                @foreach (Pricing pricing in Model._pricings)
                {
                    <div class="col-lg-4 box @(pricing.IsFeature==true ? "featured": "")">
                        <h3>@pricing.Name</h3>
                        <h4>$@pricing.Price<span>per month</span></h4>
                        <ul>

                             @foreach (Service service in Model._services)
                                {
                            <li style="@(pricing.PricingServices.Any(ps => ps.ServiceId==service.Id) == false ? "text-decoration: line-through;" : "")"><i class="bx bx-check"></i>@service?.Name</li>
                                }
                           
                        </ul>
                        <a href="#" class="buy-btn">Buy Now</a>
                    </div>
                }

                    
                

            </div>

        </div>
    </section><!-- End Pricing Section -->

</main><!-- End #main -->
