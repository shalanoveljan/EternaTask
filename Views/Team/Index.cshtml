@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a href="index.html">Home</a></li>
                <li>Team</li>
            </ol>
            <h2>Team</h2>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Team Section ======= -->
    <section id="team" class="team">
        <div class="container">

            <div class="row">

                @foreach (Employee emp in Model)
                {
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="member">
                        <img src="~/assets/img/team/@emp.Image" alt="">
                        <h4>@emp.Name @emp.SurName</h4>
                        <span>@emp.position.Name</span>
                        <p>
                           @emp.Description
                        </p>
                        <div class="social">
                            <a href="@emp.TwitterUrl"><i class="bi bi-twitter"></i></a>
                            <a href="@emp.FacebookUrl"><i class="bi bi-facebook"></i></a>
                            <a href="@emp.InstagramUrl"><i class="bi bi-instagram"></i></a>
                            <a href="@emp.LinkedinUrl"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>
                </div>
                    
                }

               

            </div>

        </div>
    </section><!-- End Team Section -->

</main><!-- End #main -->

